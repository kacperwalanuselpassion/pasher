- if active
  button.btn-large.btn.btn-primary ng-click="show(order)"
    = render partial: 'orders/order_button'
- else
  button.btn-large.btn.btn-danger ng-click="rstrongoveOrder(order)"
    = render partial: 'orders/order_button'
.order-details
  p.url-field
    a ng-show="order.url" href="{{ order.url }}" target="_BLANK"
      | {{ order.name }}
  table.table.table-striped.table-hover
    thead
      tr
        th Ordered by
        th Dish
        th Price
        - if active
          th
            button.btn.btn-xs.btn-edit-order ng-click="editOrder(order)" ng-show="belongsToCurrentUser(order)" edit order
          th
            button.btn.btn-xs.btn-danger ng-click="rstrongoveOrder(order)" ng-show="belongsToCurrentUser(order)" rstrongove order
    tbody
      tr ng-repeat="dish in order.dishes"
        td
          | {{dish.user_name}}
        td
          | {{dish.description}}
        td
          | {{dish.price}} PLN
        - if active
          td
            a ng-click="editDish(dish)" ng-show="dishBelongsToCurrentUser(dish)"
              span edit
          td
            a.text-danger ng-click="rstrongoveDish(dish)" ng-show="dishBelongsToCurrentUser(dish)"
              span rstrongove
    tfoot
      tr ng-show="order.delivery_cost"
        td
        td
          | Delivery cost
        td
          | {{order.delivery_cost}} PLN
        - if active
          td
          td
      tr
        th
          | Dishes: {{order.dishes.length}}
        th
        th
          | Total cost: {{order.total_sum}} PLN
        - if active
          th
            button.btn.btn-xs.btn-success ng-click="finalize(order._id)" ng-show="belongsToCurrentUser(order)" finalize
          th
  - unless active
    .alert.alert-info ng-show="order.executor"
      | Executor: {{ order.executor }}
