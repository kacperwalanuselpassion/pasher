h2 Edit order {{ order.name }}
a.pull-right.btn-close-edit-order close
.row
  form#new-order-form.col-lg-8.col-lg-offset-2.col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1.col-xs-12.form-group ng-submit="edit()"
    .form-group
      input.form-control ng-model="order.name" placeholder="Where do you order?" type="text" required=''
    .form-group
      input.form-control ng-model="order.url" placeholder="Link to restaurant site, facebook page, menu, etc."
    .form-group
      input.form-control ng-model="order.delivery_cost" placeholder="Delivery cost" type="number" step="any"
    .form-group
      input.form-control ng-model="order.min_order_price" placeholder="Min. order price" type="number" step="any"
    .form-group.no-display
      input.form-control ng-model="order._id"

    = render partial: 'orders/form_timepicker'

    = render partial: 'orders/form_bitcoin_input'

    .form-group
      input.btn-create-order.btn.btn-success name="edit-order" type="submit" value="Edit order"
