#data.no-display data-user-uid="#{current_user.uid}"
div ng-app="app"
  nav.navbar.navbar-default role='navigation'
    .navbar-header
      button.navbar-toggle type='button' data-toggle='collapse' data-target='.navbar-pasher-collapse'
      a href='#'
        = image_tag image_path('pasher_logo_small.png'), class: 'pasher-logo'
    .collapse.navbar-collapse.navbar-pasher-collapse
      ul.nav.navbar-nav.navbar-right
        li
          = button_tag 'Add new order', class: 'btn-add-order btn btn-primary navbar-btn'
        li
          = link_to 'Report a problem', 'https://github.com/godot/pasher/issues/new', title: 'Report an issue on GitHub'
        li.dropdown
          a.dropdown-toggle data-toggle='dropdown' href='#'
            = current_user.name
            b.caret
          ul.dropdown-menu
            li
              = link_to 'Sign out', '/sign_out'

  .pasher-wrapper
    div ng-controller="OrdersController"

      .new-order-wrapper.no-display
        .new-order.text-center
          = render partial: 'orders/add_order_form'

      .edit-order-wrapper.no-display
        .edit-order.text-center
          = render partial: 'orders/edit_order_form'

      .add-dish-wrapper.no-display ng-controller="DishesController"
        .add-dish.text-center
          = render partial: 'dishes/add_dish_form'

      .edit-dish-wrapper.no-display ng-controller="DishesController"
        .add-dish.text-center
          = render partial: 'dishes/edit_dish_form'

      .orders-wrapper
        .orders.text-center
          = render partial: 'orders/orders_list'

  .chat-wrapper.minimalized
    = render partial: 'chat/chat'
